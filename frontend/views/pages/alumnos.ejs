<% layout('layout') %>

<div class="max-w-4xl mx-auto card">
	<h2 class="page-title">Listado de Alumnos</h2>
	<div class="table-wrapper">
		<table class="table">
			<thead class="table-header">
				<tr>
					<th class="table-cell-header">Nombre</th>
					<th class="table-cell-header">Apellido</th>
					<th class="table-cell-header">Teléfono</th>
					<th class="table-cell-header">Última asistencia</th>
					<th class="table-cell-header">Último pago</th>
				</tr>
			</thead>
			<tbody id="tabla-alumnos"></tbody>
		</table>
	</div>

	<!-- Mobile cards -->
	<div
		id="alumnos-mobile"
		class="sm:hidden space-y-4 px-2"></div>

	<script
		type="module"
		src="/js/alumnos.js"></script>
</div>
