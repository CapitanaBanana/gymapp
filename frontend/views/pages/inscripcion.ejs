<% layout('layout') %>

<div class="card w-full max-w-md mx-auto mt-12">
	<h2 class="page-title">Formulario de Inscripción</h2>
	<form
		id="formulario-inscripcion"
		class="space-y-4">
		<div class="relative">
			<input
				type="text"
				id="nombre"
				placeholder="Nombre"
				required
				class="input" />
			<span class="absolute top-2 right-2 text-red-500">*</span>
		</div>
		<div class="relative">
			<input
				type="text"
				id="apellido"
				placeholder="Apellido"
				required
				class="input" />
			<span class="absolute top-2 right-2 text-red-500">*</span>
		</div>
		<div class="relative">
			<input
				type="text"
				id="dni"
				placeholder="DNI"
				required
				class="input" />
			<span class="absolute top-2 right-2 text-red-500">*</span>
		</div>
		<div class="relative">
			<input
				type="email"
				id="email"
				placeholder="Email (opcional)"
				class="input" />
		</div>
		<div class="relative">
			<input
				type="text"
				id="telefono"
				placeholder="Teléfono"
				required
				class="input" />
			<span class="absolute top-2 right-2 text-red-500">*</span>
		</div>
		<div class="relative">
			<label class="block mb-1 font-medium">
				Tipo de cuota <span class="text-red-500">*</span>
			</label>
			<div class="flex flex-col sm:flex-row gap-6">
				<!-- Columna cuotas normales -->
				<div class="space-y-2">
					<label class="flex items-center space-x-2">
						<input
							type="radio"
							name="tipo_cuota"
							value="dos"
							required />
						<span>dos días</span>
					</label>
					<label class="flex items-center space-x-2">
						<input
							type="radio"
							name="tipo_cuota"
							value="tres"
							required />
						<span>tres días</span>
					</label>
					<label class="flex items-center space-x-2">
						<input
							type="radio"
							name="tipo_cuota"
							value="libre"
							required />
						<span>libre</span>
					</label>
				</div>
				<!-- Columna cuotas efectivo -->
				<div class="space-y-2">
					<label class="flex items-center space-x-2">
						<input
							type="radio"
							name="tipo_cuota"
							value="dos_efec"
							required />
						<span>dos días efectivo</span>
					</label>
					<label class="flex items-center space-x-2">
						<input
							type="radio"
							name="tipo_cuota"
							value="tres_efec"
							required />
						<span>tres días efectivo</span>
					</label>
					<label class="flex items-center space-x-2">
						<input
							type="radio"
							name="tipo_cuota"
							value="libre_efec"
							required />
						<span>libre efectivo</span>
					</label>
				</div>
			</div>
			<button
				type="submit"
				class="btn w-full mt-4">
				Inscribirse
			</button>
		</div>
	</form>
</div>

<script
	type="module"
	src="/js/inscripcion.js"></script>
