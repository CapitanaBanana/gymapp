<% layout('layout') %>
<!-- Esto indica que esta página usará el layout común -->

<div class="bg-white p-8 rounded-2xl shadow-lg w-full max-w-md mx-auto mt-12">
	<h2 class="text-2xl font-bold mb-6 text-center text-gray-800">
		Formulario de Inscripción
	</h2>
	<form
		id="formulario-inscripcion"
		class="space-y-4">
		<div class="relative">
			<input
				type="text"
				id="nombre"
				placeholder="Nombre"
				required
				class="w-full p-3 border border-gray-300 rounded-xl" />
			<span class="absolute top-2 right-2 text-red-500">*</span>
		</div>
		<div class="relative">
			<input
				type="text"
				id="apellido"
				placeholder="Apellido"
				required
				class="w-full p-3 border border-gray-300 rounded-xl" />
			<span class="absolute top-2 right-2 text-red-500">*</span>
		</div>
		<div class="relative">
			<input
				type="text"
				id="dni"
				placeholder="DNI"
				required
				class="w-full p-3 border border-gray-300 rounded-xl" />
			<span class="absolute top-2 right-2 text-red-500">*</span>
		</div>
		<div class="relative">
			<input
				type="email"
				id="email"
				placeholder="Email (opcional)"
				class="w-full p-3 border border-gray-300 rounded-xl" />
		</div>
		<div class="relative">
			<input
				type="text"
				id="telefono"
				placeholder="Teléfono"
				required
				class="w-full p-3 border border-gray-300 rounded-xl" />
			<span class="absolute top-2 right-2 text-red-500">*</span>
		</div>
		<button
			type="submit"
			class="w-full bg-blue-500 text-white py-3 rounded-xl">
			Inscribirse
		</button>
	</form>
</div>
<script
	type="module"
	src="/js/inscripcion.js"></script>
